class renderBlock {
    private final BlockPos pos;
    private final String name;
    private float mineDamage
    
    void renderBlock(BlockPos pos, String name) {
        this.pos = pos;
        this.name = name;
        this.mineDamage = 0;
    }
    
    void render() {
        mineDamage += getStrengh()
        renderBox() 
    }
}
